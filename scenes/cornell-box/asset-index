#include "uuids.as"

void main(ResourceIndex@ index)
{
  SceneGraphImportSettings importSettings;
  
  importSettings.materialUuids['mirror-roughness-0_0'] = uuids::mirrorRoughness_00;
  importSettings.materialUuids['mirror-roughness-0_1'] = uuids::mirrorRoughness_10;
  importSettings.materialUuids['mirror-roughness-0_2'] = uuids::mirrorRoughness_20;
  importSettings.materialUuids['mirror-roughness-0_3'] = uuids::mirrorRoughness_30;
  importSettings.materialUuids['mirror-roughness-0_4'] = uuids::mirrorRoughness_40;
  importSettings.materialUuids['leftWall'] = uuids::leftWall;
  importSettings.materialUuids['rightWall'] = uuids::rightWall;
  importSettings.materialUuids['wall'] = uuids::wall;
  importSettings.materialUuids['light'] = uuids::lightMaterial;
  
  importSettings.cameraUuids['cornell-box-camera'] = uuids::cornellBox_camera;
  importSettings.cameraUuids['camera-mirrors'] = uuids::cornellBox_cameraMirrors;
  
  importSettings.lightUuids['cornellBox-rectAreaLight'] = uuids::cornellBox_rectAreaLight;
  importSettings.lightUuids['cornellBox-roughness-rectAreaLight'] = uuids::cornellBox_roughness_rectAreaLight;
  importSettings.lightUuids['cornellBox-roughness-sphereAreaLight'] = uuids::cornellBox_roughness_sphereAreaLight;
  
  importSettings.lightUuids['cornellBox-sphereAreaLight-01'] = uuids::cornellBox_sphereAreaLight_01;
  importSettings.lightUuids['cornellBox-sphereAreaLight-05'] = uuids::cornellBox_sphereAreaLight_05;
  importSettings.lightUuids['cornellBox-sphereAreaLight-10']  = uuids::cornellBox_sphereAreaLight_10;
  importSettings.lightUuids['cornellBox-sphereAreaLight-25'] = uuids::cornellBox_sphereAreaLight_25;
  importSettings.lightUuids['cornellBox-sphereAreaLight-30']  = uuids::cornellBox_sphereAreaLight_30;
  importSettings.lightUuids['cornellBox-sphereAreaLight-50']  = uuids::cornellBox_sphereAreaLight_50;
  importSettings.lightUuids['cornellBox-rectAreaLight-01'] = uuids::cornellBox_rectAreaLight_01;
  importSettings.lightUuids['cornellBox-rectAreaLight-02'] = uuids::cornellBox_rectAreaLight_02;
  importSettings.lightUuids['cornellBox-rectAreaLight-05'] = uuids::cornellBox_rectAreaLight_05;
  importSettings.lightUuids['cornellBox-rectAreaLight-10'] = uuids::cornellBox_rectAreaLight_10;
  importSettings.lightUuids['cornellBox-rectAreaLight-20'] = uuids::cornellBox_rectAreaLight_20;
  importSettings.lightUuids['cornellBox-rectAreaLight-30'] = uuids::cornellBox_rectAreaLight_30;

  index.convertSceneGraph(sceneGraphFile: "cornell-box-empty.scene-graph",
                          sourceFile: "cornell-box.blend",
                          groupToImport: "empty-box",
                          settings: importSettings);
  index.convertSceneGraph(sceneGraphFile: "cornell-box-demo-cubes.scene-graph",
                          sourceFile: "cornell-box.blend",
                          groupToImport: "cubes",
                          settings: importSettings);
  index.convertSceneGraph(sceneGraphFile: "cornell-box-default-light.scene-graph",
                          sourceFile: "cornell-box.blend",
                          groupToImport: "default-light",
                          settings: importSettings);

  index.convertSceneGraph(sceneGraphFile: "cornell-box-roughness-lights.scene-graph",
                          sourceFile: "cornell-box-roughness.blend",
                          groupToImport: "roughness-lights",
                          settings: importSettings);
  index.convertSceneGraph(sceneGraphFile: "cornell-box-roughness-mirrors.scene-graph",
                          sourceFile: "cornell-box-roughness.blend",
                          groupToImport: "roughness-mirrors",
                          settings: importSettings);
  index.convertSceneGraph(sceneGraphFile: "cornell-box-sphere-sizes.scene-graph",
                          sourceFile: "cornell-box-light-sources.blend",
                          groupToImport: "sphere-area-light-sizes",
                          settings: importSettings);
  index.convertSceneGraph(sceneGraphFile: "cornell-box-rect-sizes.scene-graph",
                          sourceFile: "cornell-box-light-sources.blend",
                          groupToImport: "rect-area-light-sizes",
                          settings: importSettings);
                          
  index.registerSceneLayerFile(uuid: uuids::cornellBox_Empty_SceneLayer,
                               file: "cornell-box-empty.scene-layer");
  index.registerSceneLayerFile(uuid: uuids::cornellBox_DemoCubes_SceneLayer,
                               file: "cornell-box-demo-cubes.scene-layer");
  index.registerSceneLayerFile(uuid: uuids::cornellBox_DefaultLight_SceneLayer,
                               file: "cornell-box-default-light.scene-layer");
  index.registerSceneLayerFile(uuid: uuids::cornellBox_RoughnessTestLights_SceneLayer,
                               file: "cornell-box-roughness-lights.scene-layer");
  index.registerSceneLayerFile(uuid: uuids::cornellBox_RoughnessTestMirrors_SceneLayer,
                               file: "cornell-box-roughness-mirrors.scene-layer");
  index.registerSceneLayerFile(uuid: uuids::cornellBox_LightTest_SphereSizes_SceneLayer,
                               file: "cornell-box-sphere-sizes.scene-layer");
  index.registerSceneLayerFile(uuid: uuids::cornellBox_LightTest_RectSizes_SceneLayer,
                               file: "cornell-box-rect-sizes.scene-layer");
                               
  index.registerSceneFile(uuid: uuids::cornellBoxScene,
                          file: "cornell-box.scene");
  index.registerSceneFile(uuid: uuids::cornellBoxRoughnessScene,
                          file: "cornell-box-roughness.scene");
  index.registerSceneFile(uuid: uuids::cornellBoxSphereSizesScene,
                          file: "cornell-box-sphere-lights.scene");
  index.registerSceneFile(uuid: uuids::cornellBoxRectSizesScene,
                          file: "cornell-box-rect-lights.scene");

  
  PlainColorMaterial wallPlainMaterial;
  wallPlainMaterial.smoothness = 0.3;
  wallPlainMaterial.base_color = vec3(0.631, 0.065, 0.050);
  index.registerMaterial(uuid: uuids::leftWall,
                         material: wallPlainMaterial);
  wallPlainMaterial.base_color = vec3(0.14, 0.45, 0.091);
  index.registerMaterial(uuid: uuids::rightWall,
                         material: wallPlainMaterial);
  wallPlainMaterial.base_color = vec3(0.723);
  index.registerMaterial(uuid: uuids::wall,
                         material: wallPlainMaterial);
                         
  PlainColorMaterial lightPlainMaterial;
  lightPlainMaterial.base_color = vec3(0);
  lightPlainMaterial.emission = vec3(1);
  index.registerMaterial(uuid: uuids::lightMaterial,
                         material: lightPlainMaterial);
                         
  PlainColorMaterial mirrorPlainMaterial;
  mirrorPlainMaterial.base_color = vec3(1);
  mirrorPlainMaterial.metal_mask = 1.0;
  mirrorPlainMaterial.smoothness = 1.0;
  index.registerMaterial(uuid: uuids::mirrorRoughness_00,
                         material: mirrorPlainMaterial);
  mirrorPlainMaterial.smoothness = 0.9;
  index.registerMaterial(uuid: uuids::mirrorRoughness_10,
                        material: mirrorPlainMaterial);
  mirrorPlainMaterial.smoothness = 0.8;
  index.registerMaterial(uuid: uuids::mirrorRoughness_20,
                        material: mirrorPlainMaterial);
  mirrorPlainMaterial.smoothness = 0.7;
  index.registerMaterial(uuid: uuids::mirrorRoughness_30,
                         material: mirrorPlainMaterial);
  mirrorPlainMaterial.smoothness = 0.6;
  index.registerMaterial(uuid: uuids::mirrorRoughness_40,
                         material: mirrorPlainMaterial);

  RectAreaLightSource rectAreaLight;
  SphereAreaLightSource sphereAreaLight;
  
  rectAreaLight.size = vec2(0.47, 0.38);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight,
                            light: rectAreaLight);
                            
  rectAreaLight.size = vec2(0.3);
  index.registerLightSource(uuid: uuids::cornellBox_roughness_rectAreaLight,
                            light: rectAreaLight);
  sphereAreaLight.radius = 0.1125;
  index.registerLightSource(uuid: uuids::cornellBox_roughness_sphereAreaLight,
                            light: sphereAreaLight);
                            
  sphereAreaLight.radius = 0.5;
  sphereAreaLight.luminous_power *= 0.1;
  index.registerLightSource(uuid: uuids::cornellBox_sphereAreaLight_01,
                            light: sphereAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_sphereAreaLight_05,
                            light: sphereAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_sphereAreaLight_10,
                            light: sphereAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_sphereAreaLight_25,
                            light: sphereAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_sphereAreaLight_30,
                            light: sphereAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_sphereAreaLight_50,
                            light: sphereAreaLight);
                            

  rectAreaLight.size = vec2(1);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight_01,
                            light: rectAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight_02,
                            light: rectAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight_05,
                            light: rectAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight_10,
                            light: rectAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight_20,
                            light: rectAreaLight);
  index.registerLightSource(uuid: uuids::cornellBox_rectAreaLight_30,
                            light: rectAreaLight);
}
